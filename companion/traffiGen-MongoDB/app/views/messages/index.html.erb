<p style="color: green"><%= notice %></p>

<h1 class="d-flex justify-content-center">Messages</h1>
<hr>
<hr>

<%= link_to "New message", new_message_path, class: "btn btn-primary d-flex justify-content-center" %>
<div id="messages" class="flex-column">
  <% @messages.each do |message| %>
  <div>
    <%= render message %>
     <p>
      <%= link_to "Show this message", message , class: "btn btn-primary" %>
    </p> 
  </div>
  <hr>
  <% end %>
</div>
